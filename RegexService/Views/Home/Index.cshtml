@{
    ViewData["Title"] = "Home Page";
}


<div class="row" id="global-div">
    <input type="text" id="playerName" placeholder="Enter your name" />
    <button type="button" id="queueButton">Queue for a random game</button>
    <button type="button" id="queueAsker">Ask someone a Regex problem </button>
    <button type="button" id="queueResponder">Guess someone's Regex string</button>
    <p><span id="challengeAccept">Waiting for someone to accept the challenge</span></p>
</div>
